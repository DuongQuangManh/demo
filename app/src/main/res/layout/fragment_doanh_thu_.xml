<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.DoanhThu_Fragment"
    android:background="#83E53935"
    android:orientation="vertical"
    android:padding="20dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Từ ngày: "
        android:textStyle="bold"
        android:textSize="18sp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tip_fromNgay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:startIconDrawable="@drawable/ic_calendar">
        <EditText
            android:id="@+id/edt_fromNgay_doanhthu"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="yyyy/MM/DD"
            android:background="@drawable/custom_edt"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đến ngày: "
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="10dp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tip_toNgay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:startIconDrawable="@drawable/ic_calendar">
        <EditText
            android:id="@+id/edt_toNgay_doanhthu"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="yyyy/MM/DD"
            android:background="@drawable/custom_edt"/>
    </com.google.android.material.textfield.TextInputLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:layout_marginTop="15dp">
        <Button
            android:id="@+id/btn_doanhthu"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:text="Doanh thu"
            android:textColor="@color/white"
            android:background="@drawable/custom_btn"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tvDoanhThu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Doanh thu"
        android:layout_marginTop="20dp"/>



</LinearLayout>