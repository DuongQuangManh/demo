<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tài khoản: "
        android:textSize="18sp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/edt_tk_create"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Tài khoản"
        android:drawableEnd="@drawable/ic_account"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:background="@drawable/custom_edt"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Họ tên: "
        android:textSize="18sp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/edt_hoten_create"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Tài khoản"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:background="@drawable/custom_edt"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mật khẩu: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edt_mk_create"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_edt"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:paddingStart="10dp" />

        <ImageView
            android:id="@+id/img_showpass_create"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_eye_off" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mật khẩu 2: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edt_mk2_create"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_edt"
            android:hint="Mật khẩu 2"
            android:inputType="textPassword"
            android:paddingStart="10dp" />

        <ImageView
            android:id="@+id/img_showpass2_create"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_eye_off" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <Button
            android:id="@+id/btn_taotk_create"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/custom_btn"
            android:text="Tạo"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </RelativeLayout>

</LinearLayout>