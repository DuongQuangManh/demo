<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/custom_bgdialog"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm loại sách"
        android:background="@drawable/custom_header_dialog"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:gravity="center"
        android:textStyle="normal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="20dp"
        android:orientation="vertical"
       >
        <EditText
            android:id="@+id/edt_matv_dialogls"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/custom_edt"
            android:hint="Mã sách"
            android:paddingStart="10dp"/>
        <EditText
            android:id="@+id/edt_tentv_dialogls"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/custom_edt"
            android:hint="Tên sách"
            android:paddingStart="10dp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#8E24AA"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:gravity="center"
        >

        <Button
            android:id="@+id/btn_luu_dialogls"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="50dp"
            android:layout_toStartOf="@+id/btn_huy_dialogls"
            android:background="@drawable/custom_btn"
            android:drawableStart="@drawable/ic_save"
            android:paddingStart="2dp"
            android:text="Lưu"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_huy_dialogls"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_btn"
            android:text="Huỷ"
            android:textColor="@color/white" />

    </RelativeLayout>
</LinearLayout>