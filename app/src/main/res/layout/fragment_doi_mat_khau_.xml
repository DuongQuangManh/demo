<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#48FF005D"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đổi mật khẩu"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="#8E24AA"
        android:gravity="center"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mật khẩu hiện tại: "
        android:textSize="18sp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/edt_mkcu_doimatkhau"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="mật khẩu hiện tại"
        android:paddingStart="10dp"
        android:background="@drawable/custom_edt"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mật khẩu mới: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edt_mk_doimatkhau"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_edt"
            android:hint="Mật khẩu mới"
            android:inputType="textPassword"
            android:paddingStart="10dp" />

        <ImageView
            android:id="@+id/img_showpass_doimatkhau"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_eye_off" />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập lại mật khẩu mới: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edt_mk2_doimatkhau"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_edt"
            android:hint="Nhập lại mật khẩu mới"
            android:inputType="textPassword"
            android:paddingStart="10dp" />

        <ImageView
            android:id="@+id/img_showpass2_doimatkhau"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_eye_off" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <Button
            android:id="@+id/btn_doimatkhau"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/custom_btn"
            android:text="Đổi mật khẩu"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </RelativeLayout>
</LinearLayout>