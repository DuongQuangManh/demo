<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:background="#ff0"
        android:id="@+id/layout_update_itemls">

        <TextView
            android:id="@+id/tv_mals_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã loại sách: 1"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_tenls_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_mals_item"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:text="Tên loại sách: CNTT"
            android:textSize="18dp"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/img_delete_itemls"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_delete"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"/>
    </RelativeLayout>


</androidx.cardview.widget.CardView>